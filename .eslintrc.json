{
  "parser": "@typescript-eslint/parser",
  "root": true,
  "plugins": [
    "@typescript-eslint",
    "workspaces"
  ],
  "ignorePatterns": [
    "coverage/**",
    "dist/**"
  ],
  "overrides": [
    {
      "files": "**/*.{js,jsx,ts,tsx}",
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:workspaces/recommended"
      ],
      "env": {
        "node": true
      },
      "rules": {
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
      }
    },
    {
      "files": "**/*.{jsx,tsx}",
      "extends": [
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:react-hooks/recommended"
      ],
      "env": {
        "node": true
      },
      "rules": {
        "jsx-quotes": ["error", "prefer-double"],
        "react/prop-types": "off"
      }
    },
    {
      "files": "{tests,e2e}/**/*.{js,jsx,ts,tsx}",
      "globals": {
        "jest/globals": true
      },
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style"
      ],
      "rules": {
        "no-console": "error"
      }
    }
  ]
}
