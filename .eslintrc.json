{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "workspaces"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:workspaces/recommended"
  ],
  "env": {
    "node": true,
    "jest/globals": true
  },
  "root": true,
  "rules": {
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "overrides": [
    {
      "files": "*.json",
      "rules": {
        "quotes": ["error", "double"],
        "semi": ["error", "never"]
      }
    }
  ]
}
