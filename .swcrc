{
  "jsc": {
    "loose": true,
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "decoratorMetadata": true,
      "react": {
        "runtime": "automatic"
      }
    },
    "paths": {
      "@/src/*": ["./src/*"],
      "@/tools/*": ["./tools/*"]
    }
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": true,
  "env": {
    "targets": "node 16"
  }
}
