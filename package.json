{
  "name": "jill",
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@3.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jujulego/jill"
  },
  "workspaces": [
    "e2e",
    "packages/*"
  ],
  "browserslist": [
    "maintained node versions and node >= 14"
  ],
  "scripts": {
    "lint": "yarn workspaces foreach -pv run lint",
    "build": "yarn workspaces foreach -pv --topological-dev run build",
    "e2e": "yarn workspace jill-e2e run start"
  },
  "devDependencies": {
    "@jujulego/jill": "1.1.13",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "eslint": "7.32.0",
    "eslint-plugin-jest": "25.2.4",
    "eslint-plugin-workspaces": "0.7.0",
    "jest": "27.3.1",
    "typescript": "4.4.4"
  }
}
