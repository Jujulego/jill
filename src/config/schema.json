{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "jobs": {
      "type": "number"
    },
    "hooks": {
      "type": "boolean",
      "default": true,
      "description": "Run hook scripts"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "verbose": {
      "type": "string",
      "enum": ["info", "verbose", "debug"]
    }
  }
}
